<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= title || "MindWell - Digital Mental Health Support" %></title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet"/>

  <style>
    body {
      background-color: #f8f9fa;
    }

    /* Navbar */
    .navbar {
      padding: 0.7rem 1.4rem;
    }

    .nav-link {
      display: flex;
      align-items: center;
      gap: 6px;
      padding: 6px 14px;
      border-radius: 10px;
      font-size: 0.95rem;
      color: #212529;
    }

    .nav-link:hover {
      background-color: #f1f3f5;
    }

    .nav-link.active {
      background-color: #e7f1ff;
      color: #0d6efd !important;
      font-weight: 600;
    }

    /* Crisis */
    .nav-link.crisis {
      background-color: #fdecea;
      color: #dc3545 !important;
      font-weight: 600;
    }

    .nav-link.crisis:hover {
      background-color: #fbdad7;
    }

    /* User dropdown */
    .user-dropdown:hover {
      background-color: #f1f5ff;
    }

    .dropdown-menu .dropdown-item {
      padding: 10px 16px;
      font-size: 0.95rem;
    }

    .dropdown-menu .dropdown-item:hover {
      background-color: #f8f9fa;
    }

    .dropdown-item i {
      width: 18px;
      text-align: center;
    }
  </style>
</head>

<body>

<!-- ================= NAVBAR ================= -->
<% if (typeof hideNavbar === 'undefined' || !hideNavbar) { %>


<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
  <div class="container-fluid">

    <!-- BRAND -->
    <a class="navbar-brand d-flex align-items-center gap-2 fw-bold" href="/dashboard">
      <i class="fa-solid fa-brain text-primary fs-4"></i>
      <span class="fs-5">Mind<span class="text-primary">Well</span></span>
    </a>

    <!-- TOGGLER -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- NAV CONTENT -->
    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav ms-auto align-items-lg-center gap-2">

        <li class="nav-item">
          <a class="nav-link <%= currentRoute === '/dashboard' ? 'active' : '' %>" href="/dashboard">
            <i class="fa-solid fa-house"></i> Dashboard
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link <%= currentRoute === '/checkin' ? 'active' : '' %>" href="/checkin">
            <i class="fa-solid fa-pen-to-square"></i> Track Mood
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link <%= currentRoute === '/quiz' ? 'active' : '' %>" href="/quiz">
            <i class="fa-solid fa-file-lines"></i> Self Check
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link <%= currentRoute === '/checkin/history' ? 'active' : '' %>" href="/checkin/history">
            <i class="fa-solid fa-table"></i> Check-Ins
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link <%= currentRoute === '/resources' ? 'active' : '' %>" href="/resources">
            <i class="fa-solid fa-book-open"></i> Resources
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link crisis <%= currentRoute === '/crisis' ? 'active' : '' %>" href="/crisis">
            <i class="fa-solid fa-phone"></i> Crisis
          </a>
        </li>
         


        <!-- USER DROPDOWN -->
        <li class="nav-item dropdown ms-lg-3">
          <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 px-3 py-2 rounded-pill user-dropdown"
             href="#" data-bs-toggle="dropdown">
            <i class="fa-solid fa-user-circle fs-5 text-primary"></i>
            <span class="fw-medium"><%= user ? user.email : "Guest" %></span>
          </a>

          <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 rounded-3">
            <% if (user) { %>
              <li>
                <a class="dropdown-item d-flex align-items-center gap-2" href="/logout">
                  <i class="fa-solid fa-right-from-bracket text-danger"></i> Logout
                </a>
              </li>
            <% } else { %>
              <li>
                <a class="dropdown-item d-flex align-items-center gap-2" href="/login">
                  <i class="fa-solid fa-arrow-right-to-bracket text-primary"></i> Login
                </a>
              </li>
              <li>
                <a class="dropdown-item d-flex align-items-center gap-2" href="/register">
                  <i class="fa-solid fa-user-plus text-success"></i> Register
                </a>
              </li>
            <% } %>
          </ul>
        </li>

      </ul>
    </div>
  </div>
</nav>
<% } %>
<!-- ================= MAIN CONTENT ================= -->
<main class="container mt-4">
  <div id="riskBanner"></div>
  <%- body %>
</main>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Risk Check -->
<script>
  fetch("/api/risk-status")
    .then(res => res.json())
    .then(data => {
      if (data.risk === "HIGH") {
        document.getElementById("riskBanner").innerHTML = `
          <div class="alert alert-danger text-center">
            ⚠️ ${data.message}
            <a href="/crisis" class="alert-link ms-2">Get Help</a>
          </div>`;
      }
    })
    .catch(() => {});
</script>

</body>
</html>
